{
  "webroot": "/var/fine",
  "certificates": {
    "example.com": {
      "key": "key.pem",
      "cert": "cert.pem"
    },
    "www.example.com": {
      "key": "key.pem",
      "cert": "cert.pem"
    },
    "api.example.com": {
      "key": "key.pem",
      "cert": "cert.pem"
    }
  },
  "database": {
    "host": "",
    "port": 3306,
    "user": "",
    "password": "",
    "database": "",
    "supportBigNumbers": true,
    "dateStrings": true
  },
  "short-link": {
    "domain": "shortexample.com"
  },
  "static-content": {
    "example.com": {
      ".": "home.html",
      "index.css": "home.css",
      "404": "404.html",
      "418": "418.html"
    },
    "app.example.com": {
      ".": "home.html",
      "chat": "chat.html"
    },
    "app1.example.com": {
      ".": "app/index.html",
      "index.js": "app1/index.css",
      "*": "404.html"
    },
    "app2.example.com": {
      ".": "app2/index.html",
      "*": "app2/*"
    },
    "app3.example.com": {
      "*": "app3/index.html",
      "shared/*": "app3/shared.html",
      "index.js": "app3/index.js"
    },
    "anotherexample.com": {
      ".": "anotherexample/index.html"
    }
  },
  "content-servers": {
    "short-link": {
      "server": "./servers/short-link.js"
    },
    "s3": {
      "server": "./servers/s3.js"
    }
  },
  "webapps": {
    "note": {
      "host": "app.example.com",
      "server": "socket:/tmp/note.socket"
    },
    "yala": {
      "host": "chat.example.com",
      "server": "nodejs:./servers/yala.js"
    }
  }
}